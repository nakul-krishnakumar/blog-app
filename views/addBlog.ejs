<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head.ejs') %>
   <title>Document</title>
</head>
<body>
   <%- include('./partials/scripts.ejs') %>
   <%- include('./partials/navbar.ejs') %>
   <div class="container mt-3">
      <form method="post" action="/blog/add-new" enctype="multipart/form-data">
         <div class="form-group mt-3">
            <label for="coverImage">Cover Image</label>
            <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
         </div>

         <div class="form-group mt-3">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Blog Title">
         </div>

         <div class="form-group mt-3">
            <label for="body">Body</label>
            <textarea class="form-control" id="body" name="body" rows="10" minlength="20"></textarea>
         </div>

         <button type="submit" class="btn btn-primary mt-3">Post</button>
         </form>
   </div>
</body>
</html>