<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head.ejs') %>
   <title>Document</title>
</head>
<body>
   <%- include('./partials/scripts.ejs') %>
   <%- include('./partials/navbar.ejs') %>

   <% if (locals.blogs) { %>
      <ul class="flex-lg-row gap-5 mt-5 over">
         <% locals.blogs.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
               <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Cover Image">
               <div class="card-body">
                 <h5 class="card-title"><%= blog.title %></h5>
                 <p class="card-text"><%= blog.body.substring(0, 50) %>...</p>
                 <a href='/blog/<%= blog._id %>' class="btn btn-primary">See More</a>
               </div>
            </div>
         <% }) %>
      </ul>
      <% } else { %>
         <p> No cards available </p>
      <% } %>
</body>
</html>